# 小汪記記 - 生產環境配置模板
# 完成 Oen Payment 申請後，請填入實際值

# ===========================================
# Oen Payment 正式環境設定
# ===========================================
OEN_PAYMENT_API_URL=https://api.payment.oen.tw
OEN_PAYMENT_MERCHANT_ID=在此填入你的商戶ID
OEN_PAYMENT_API_KEY=在此填入你的API金鑰
OEN_PAYMENT_SECRET_KEY=在此填入你的簽章密鑰

# ===========================================
# 支付系統設定
# ===========================================
PAYMENT_SIGNATURE_VERIFICATION=true
PAYMENT_SUCCESS_URL=https://你的域名.zeabur.app/payment/success
PAYMENT_CANCEL_URL=https://你的域名.zeabur.app/payment/cancel
PAYMENT_CALLBACK_URL=https://你的域名.zeabur.app/payment/callback

# 訂閱價格設定（台幣）
PREMIUM_SUBSCRIPTION_PRICE=299
PREMIUM_SUBSCRIPTION_DURATION_MONTHS=1

# ===========================================
# LINE Bot 正式設定
# ===========================================
LINE_CHANNEL_ACCESS_TOKEN=你的正式LINE_Channel_Access_Token
LINE_CHANNEL_SECRET=你的正式LINE_Channel_Secret
LINE_LOGIN_CHANNEL_ID=你的正式LINE_Login_Channel_ID
LINE_LOGIN_CHANNEL_SECRET=你的正式LINE_Login_Channel_Secret
LINE_LOGIN_CALLBACK_URL=https://你的域名.zeabur.app/auth/line/callback

# ===========================================
# 資料庫設定（正式）
# ===========================================
SUPABASE_URL=你的正式Supabase_URL
SUPABASE_ANON_KEY=你的正式Supabase_Anon_Key
TABLE_PREFIX=prod_

# ===========================================
# 系統環境設定
# ===========================================
NODE_ENV=production
PORT=3000
WEBHOOK_BASE_URL=https://你的域名.zeabur.app
SESSION_SECRET=你的超安全Session密鑰

# ===========================================
# LIFF 應用設定
# ===========================================
LIFF_BASE_URL=https://你的域名.zeabur.app
LIFF_APP_ID=你的正式LIFF_App_ID

# ===========================================
# OpenAI 設定
# ===========================================
OPENAI_API_KEY=你的OpenAI_API_Key

# ===========================================
# 安全設定
# ===========================================
CORS_ORIGIN=https://liff.line.me,https://你的域名.zeabur.app
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOG_LEVEL=info

# ===========================================
# 功能開關
# ===========================================
ENABLE_PAYMENT_NOTIFICATIONS=true
ENABLE_SUBSCRIPTION_EXPIRY_CHECK=true
ENABLE_METRICS_COLLECTION=true