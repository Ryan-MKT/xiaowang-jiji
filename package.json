{
  "name": "xiaowang-linebot",
  "version": "2.0.0",
  "description": "小汪記記 LINE Bot - 智能待辦事項管理與付費訂閱系統",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:basic": "node server.js",
    "dev:auto": "node start-dev.js",
    "kill-servers": "node kill-servers.js",
    "restart": "npm run kill-servers && timeout /t 3 && npm run dev",
    "env:dev": "node switch-env.js dev",
    "env:prod": "node switch-env.js prod",
    "switch:dev": "node switch-env.js dev && npm run dev",
    "switch:prod": "node switch-env.js prod",
    "build": "echo 'No build step required for Node.js app'",
    "production": "NODE_ENV=production node server.js",
    "health": "curl -f http://localhost:3001/health || exit 1",
    "postinstall": "echo 'Post-install complete'"
  },
  "dependencies": {
    "@line/bot-sdk": "^9.0.0",
    "@supabase/supabase-js": "^2.57.2",
    "axios": "^1.11.0",
    "dotenv": "^17.2.2",
    "express": "^4.18.0",
    "express-session": "^1.18.2",
    "form-data": "^4.0.4",
    "fs-extra": "^11.3.1",
    "jsonwebtoken": "^9.0.2",
    "openai": "^5.19.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
