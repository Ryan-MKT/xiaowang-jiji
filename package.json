{
  "name": "linebot-simple",
  "version": "1.0.0",
  "description": "Simple LINE Bot Echo Server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:basic": "node server.js",
    "dev:auto": "node start-dev.js",
    "kill-servers": "node kill-servers.js",
    "restart": "npm run kill-servers && timeout /t 3 && npm run dev",
    "env:dev": "node switch-env.js dev",
    "env:prod": "node switch-env.js prod",
    "switch:dev": "node switch-env.js dev && npm run dev",
    "switch:prod": "node switch-env.js prod"
  },
  "dependencies": {
    "@line/bot-sdk": "^9.0.0",
    "@supabase/supabase-js": "^2.57.2",
    "axios": "^1.11.0",
    "dotenv": "^17.2.2",
    "express": "^4.18.0",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^5.19.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
